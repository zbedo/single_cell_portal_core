<h1>My Studies</h1>
<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
			<div class="well">
				<table class="table table-striped" id="studies">
					<thead>
					<tr>
            <th>Name</th>
            <th>Owner</th>
						<th>Description</th>
						<th>Visibility</th>
            <th># Files</th>
						<th class="actions">Actions</th>
					</tr>
					</thead>

					<tbody>
					<% @studies.each do |study| %>
						<tr class="study-entry">
              <td class="study-name"><%= link_to study.name, view_study_path(study_name: study.url_safe_name), title: 'View Live', data: {toggle: 'tooltip', placement: 'right'} %></td>
              <td><%= study.user.email %></td>
							<td><%= strip_tags(truncate_html(study.description, length: 50)) %></td>
							<td><%= study.visibility %></td>
              <td id="<%= study.url_safe_name %>-study-file-count"><%= study.total_file_count %></td>
							<td>
                  <%= link_to "<span class='fa fa-info-circle'></span> Show Details".html_safe, study_path(study), class: "btn btn-xs btn-info #{study.url_safe_name}-show" %>
                  <%= link_to "<span class='fa fa-upload'></span> Upload/Edit Data".html_safe, initialize_study_path(study), class: "btn btn-xs btn-success #{study.url_safe_name}-upload" %>
                  <%= link_to "<span class='fa fa-refresh'></span> Sync Workspace".html_safe, sync_study_path(study), class: "btn btn-xs btn-warning #{study.url_safe_name}-sync sync-button" %>
                  <%= link_to "<span class='fa fa-edit'></span> Edit Study".html_safe, edit_study_path(study), class: "btn btn-xs btn-primary #{study.url_safe_name}-edit" %>
                  <% if study.can_delete?(current_user) %>
                    <%= link_to "<span class='fa fa-trash'></span> Delete All".html_safe, study, class: "btn btn-xs btn-danger delete-btn #{study.url_safe_name}-delete", title: 'Delete everything including FireCloud workspace' , method: :delete, data: {toggle: 'tooltip', placement: 'top'} %>
                    <%= link_to "<span class='fa fa-trash'></span> Delete Local Only".html_safe, study_path(id: study.id, workspace: 'persist'), class: "btn btn-xs btn-danger delete-btn #{study.url_safe_name}-delete-local", title: 'Delete all database records but keep FireCloud workspace' , method: :delete, data: {toggle: 'tooltip', placement: 'top'} %>
                  <% end %>
                </td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
		<p>
      <%= link_to "<span class='fa fa-fw fa-plus'></span> New Study".html_safe, new_study_path, class: 'btn btn-lg btn-success', id: 'create-new-study' %>
    </p>
	</div>
</div>
<div class="modal fade" id="sync-modal" role="dialog" aria-labelledby="sync-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="text-center">Syncing Files and Permissions... Please Wait.</h4>
      </div>
      <div class="modal-body">
        <div class="spinner-target" id="sync-modal-spinner"></div>
      </div>
      <div class="modal-footer">
        <button class="close" data-dismiss="modal">Ã—</button>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">

    $('#studies').dataTable({
        pagingType: "full_numbers",
        order: [[0, 'asc']],
        language: {
            search: "Filter Results By: "
        }
    });

    // ask user to confirm delete, then show modal
    // use event delegation to attach to all delete-btn regardless
    // of whether they are visible yet or not
    $('#studies').on('click', '.delete-btn', function(){
        // get name of study for confirmation
        var study = $(this).parent().parent().find('.study-name').text();
        if ( confirm('Are you sure you want to delete \"' + study + '\"? This will remove all associated database records, including the FireCloud workspace and all uploaded files.')) {
            launchModalSpinner('#delete-modal-spinner','#delete-modal', function() {
                return true;
            });
        } else {
            return false;
        }
    });

    $('.sync-button').click(function() {
        launchModalSpinner('#sync-modal-spinner','#sync-modal', function() {
            return true;
        });
    });

</script>