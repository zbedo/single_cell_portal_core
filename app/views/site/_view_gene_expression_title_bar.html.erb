<div class="row">
  <div class="col-md-12">
    <h1 class="study-lead">Gene<%= action_name =~ /set/ ? ' Set' : nil %> Expression for <%= render partial: 'gene_name_list' %><%= render partial: 'missing_genes' %></h1>
    <% if action_name =~ /set/ %>
      <h3 class="help-block lead">Expression values are shown as the <strong id="selected-consensus"><%= params[:consensus].nil? ? 'mean' : params[:consensus] %></strong> of expression values across all genes for each cell.</h3>
    <% end %>
  </div>
</div>

<script>
  <% if User.feature_flags_for_user(current_user).key?('ideogram_related_genes') && User.feature_flags_for_user(current_user)['ideogram_related_genes'] == true %>
    document.querySelector('.study-lead').parentElement.innerHTML +=
      '<div id="ideogramSearchResultsContainer"></div>';
    window.SCP.taxid = '<%= @taxid %>';
    window.SCP.organism = '<%= @organism %>';
    createSearchResultsIdeogram();
  <% end %>
</script>
