<div class="row form-group">
  <div class="col-md-5 col-sm-12 col-xs-12">
    <%= form_tag(site_path, method: :get, class: 'form') do %>
      <div class="input-group">
        <%= text_field_tag :search_terms, nil, class: 'form-control', placeholder: 'Search Studies...' %>
        <%= hidden_field_tag :order, params[:order].nil? ? "" : params[:order] %>
        <% if @selected_branding_group.present? %>
          <%= hidden_field_tag :scpbr, @selected_branding_group.name_as_id %>
        <% end %>
        <div class="input-group-btn">
          <button class="btn btn-info" type="submit" name="commit" id="submit-search"><span class="fas fa-search"></span></button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-1 col-sm-12 col-xs-12"><%= link_to 'Help', 'javascript:;', class: 'btn btn-default btn-block', title: 'Search Help', data: {toggle: 'popover', container: 'body', content: render(partial: 'search_help'), html: true, trigger: 'hover focus'} %></h2></div>
  <div class="col-md-2 col-sm-4 col-xs-12">
    <%= scp_link_to "<span class='fas fa-clock-o'></span> Most Recent".html_safe, get_site_path_with_params(params[:search_terms].to_s, 'recent'), class: 'btn btn-default btn-block' %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-12">
    <%= scp_link_to "<span class='fas fa-star-o'></span> Most Popular".html_safe, get_site_path_with_params(params[:search_terms].to_s, 'popular'), class: 'btn btn-default btn-block' %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-12">
    <%= scp_link_to "<span class='fas fa-ban'></span> Reset Filters".html_safe, site_path, class: 'btn btn-default btn-block' %>
  </div>
</div>
<div class="panel-group" id="studies">
  <%= render partial: '/site/search/studies_list' %>
</div>
<div class="row">
  <div class="col-sm-offset-4 col-sm-4">
    <%= link_to "Load More Studies", "#", class: "btn btn-lg btn-block btn-default", id: "pagination" %>
  </div>
</div>

<%= link_to "<span class='fas fa-chevron-up'></span>".html_safe, "#", class: "btn btn-default btn-xs" %>